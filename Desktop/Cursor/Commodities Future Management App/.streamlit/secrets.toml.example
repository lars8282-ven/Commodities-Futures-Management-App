# Streamlit Secrets Configuration
# Copy this file to .streamlit/secrets.toml and fill in your actual values
# IMPORTANT: Never commit secrets.toml to git - it's already in .gitignore

# Supabase Configuration
SUPABASE_URL = "your-supabase-url-here"
SUPABASE_KEY = "your-supabase-anon-key-here"

# OIDC Authentication Configuration
# For @tepuiv.com emails, you'll likely use Microsoft Azure AD (Entra ID)

# Shared auth settings
[auth]
# For local development:
redirect_uri = "http://localhost:8501/oauth2callback"
# For Streamlit Cloud deployment, use your app URL:
# redirect_uri = "https://your-app-name.streamlit.app/oauth2callback"

# Generate a random secret for cookie encryption (32+ characters recommended)
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
cookie_secret = "your-random-cookie-secret-here-generate-with-secrets-token_urlsafe-32"

# Microsoft Azure AD / Entra ID Configuration
# Replace {tenant} with your Azure AD tenant ID or domain
[auth.microsoft]
client_id = "your-azure-ad-client-id-here"
client_secret = "your-azure-ad-client-secret-here"
server_metadata_url = "https://login.microsoftonline.com/{tenant}/v2.0/.well-known/openid-configuration"

# Alternative: Google Workspace Configuration (if using Google for @tepuiv.com)
# [auth.google]
# client_id = "your-google-client-id-here"
# client_secret = "your-google-client-secret-here"
# server_metadata_url = "https://accounts.google.com/.well-known/openid-configuration"

# Optional: Customize OIDC parameters
# [auth.microsoft.client_kwargs]
# prompt = "login"  # Force login every time (vs "select_account")

# Environment variables (alternative to hardcoding)
# Can also be set via Streamlit Cloud's secrets management
# SUPABASE_URL = "${SUPABASE_URL}"
# SUPABASE_KEY = "${SUPABASE_KEY}"

